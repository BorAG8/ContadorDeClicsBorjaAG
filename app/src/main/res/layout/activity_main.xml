<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F7F7F8"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/sumaDeClics"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="108dp"
        android:gravity="center"
        android:text="0"
        android:textSize="40sp"
        app:layout_constraintBottom_toBottomOf="@+id/resetAllContador"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/resetAllContador"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/resetAllContador"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:backgroundTint="#FC9801"
        android:text="Reset All"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.111"
        app:layout_constraintStart_toEndOf="@+id/sumaDeClics"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.152" />

    <TextView
        android:id="@+id/contadorDeClics1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginEnd="36dp"
        android:gravity="center"
        android:text="0"
        android:textSize="40sp"
        app:layout_constraintBottom_toBottomOf="@+id/aumentarElContador1"
        app:layout_constraintEnd_toStartOf="@+id/aumentarElContador1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/aumentarElContador1"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/aumentarElContador1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="52dp"
        android:backgroundTint="#439F4C"
        android:text="+1"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="@+id/reset1"
        app:layout_constraintEnd_toStartOf="@+id/reset1"
        app:layout_constraintTop_toTopOf="@+id/reset1"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/reset1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="48dp"
        android:backgroundTint="#FCBC01"
        android:text="Reset"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/resetAllContador" />

    <TextView
        android:id="@+id/contadorDeClics2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginEnd="36dp"
        android:gravity="center"
        android:text="0"
        android:textSize="40sp"
        app:layout_constraintBottom_toBottomOf="@+id/aumentarElContador2"
        app:layout_constraintEnd_toStartOf="@+id/aumentarElContador2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/aumentarElContador2"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/aumentarElContador2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="52dp"
        android:backgroundTint="#429E4C"
        android:textColor="#000000"
        android:text="+1"
        app:layout_constraintBottom_toBottomOf="@+id/reset2"
        app:layout_constraintEnd_toStartOf="@+id/reset2"
        app:layout_constraintTop_toTopOf="@+id/reset2"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/reset2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="48dp"
        android:backgroundTint="#FABC01"
        android:text="Reset"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/reset1" />

    <TextView
        android:id="@+id/contadorDeClics3"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginEnd="36dp"
        android:gravity="center"
        android:text="0"
        android:textSize="40sp"
        app:layout_constraintBottom_toBottomOf="@+id/aumentarElContador3"
        app:layout_constraintEnd_toStartOf="@+id/aumentarElContador3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/aumentarElContador3"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/aumentarElContador3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="52dp"
        android:backgroundTint="#419D4C"
        android:textColor="#000000"
        android:text="+1"
        app:layout_constraintBottom_toBottomOf="@+id/reset3"
        app:layout_constraintEnd_toStartOf="@+id/reset3"
        app:layout_constraintTop_toTopOf="@+id/reset3"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/reset3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="48dp"
        android:backgroundTint="#FCBC01"
        android:text="Reset"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/reset2" />

    <TextView
        android:id="@+id/contadorDeClics4"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginEnd="36dp"
        android:gravity="center"
        android:text="0"
        android:textSize="40sp"
        app:layout_constraintBottom_toBottomOf="@+id/aumentarElContador4"
        app:layout_constraintEnd_toStartOf="@+id/aumentarElContador4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/aumentarElContador4"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/aumentarElContador4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="52dp"
        android:backgroundTint="#419D4C"
        android:textColor="#000000"
        android:text="+1"
        app:layout_constraintBottom_toBottomOf="@+id/reset4"
        app:layout_constraintEnd_toStartOf="@+id/reset4"
        app:layout_constraintTop_toTopOf="@+id/reset4"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/reset4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="48dp"
        android:backgroundTint="#FCBC01"
        android:text="Reset"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/reset3"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>